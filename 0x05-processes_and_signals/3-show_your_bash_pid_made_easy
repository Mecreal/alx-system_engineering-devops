#!/usr/bin/env bash
# Bash script to display PIDs and names of processes containing 'bash'

for proc in /proc/[0-9]*; do
    # Check if cmdline file exists for the process
    if [[ -f "$proc/cmdline" ]]; then
        # Read the command line and check if it contains 'bash'
        if grep -q bash "$proc/cmdline"; then
            # Extract PID and print it with the process name
            pid=${proc##*/}
            cmd=$(tr '\0' ' ' < "$proc/cmdline" | cut -d ' ' -f 1)
            echo "$pid $cmd"
        fi
    fi
done
